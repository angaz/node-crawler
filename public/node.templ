css disabled() {
	pointer-events: none;
	filter: saturate(0);
}

func boolToYesNo(b bool) string {
	if b {
		return "Yes"
	}

	return "No"
}

func boolToStr(b bool) string {
	if b {
		return "true"
	}

	return "false"
}

